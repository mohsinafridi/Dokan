{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Routes": [
    // 1. Authentication
    {
      "UpstreamPathTemplate": "/Account",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamScheme": "http",
      "DownstreamPathTemplate": "/api/Account",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5003
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/Account",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/api/Account",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5003
        }
      ]      
    },
    // 2. Order Service
    {
      "UpstreamPathTemplate": "/Order",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/api/Order",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer", 
          "AllowedScopes": []
      }
    },

    // 3. Ticket Service
    {
      "UpstreamPathTemplate": "/Ticket",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/api/Ticket",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "RouteClaimsRequirement": {
        "Role": "Admin"
      },
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "30s",
        "PeriodTimespan": 30,
        "Limit": 1
      }
    },
    {
      "UpstreamPathTemplate": "/Ticket",
      "UpstreamHttpMethod": [ "Post", "Put" ],
      "DownstreamPathTemplate": "/api/Ticket",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "RouteClaimsRequirement": {
        "Role": "Admin"
      }
    }

  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:5000",
    "RateLimitOptions": {
      "QuotaExceededMessage": "You want more API, pay some money !!!!",
      "HttpStatusCode": 999
    }
  }
}